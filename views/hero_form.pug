extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='id') ID:
      input#id.form-control(type='text' placeholder='id' name='id' required='true' value=(undefined===hero ? '' : hero.id) )
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='name' name='name' required='true' value=(undefined===hero ? '' : hero.name))
    div.form-group
      label(for='pet') Pet:
      input#pet.form-control(type='text' name='pet' value=(undefined===hero ? '' : hero.pet) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
